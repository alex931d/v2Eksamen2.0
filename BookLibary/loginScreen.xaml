<Window x:Class="BookLibary.loginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookLibary"
        mc:Ignorable="d"
        Title="loginScreen" Height="450" Width="400">
    <Grid>
        <Label FontSize="30" Content="login" HorizontalAlignment="Left" Margin="151,58,0,0" VerticalAlignment="Top"/>
        <GroupBox Margin="70,124,95.6,119">
            <StackPanel>
                <Label Content="username"></Label>
                <TextBox x:Name="username"></TextBox>
                <Label Content="password"></Label>
                <TextBox x:Name="pasword"></TextBox>
                <Button Content="login" Margin="10" Click="Button_Click"></Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
